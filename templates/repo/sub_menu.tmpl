{{if and (not .HideRepoInfo) (not .IsBlame)}}
<div class="ui segments repository-summary{{if and (.Permission.CanRead $.UnitTypeCode) (not .IsEmptyRepo) .LanguageStats}} repository-summary-language-stats{{end}} mt-2 mb-0">
	<div class="ui segment sub-menu repository-menu">
		<div class="ui two horizontal center link list">
			{{if and (.Permission.CanRead $.UnitTypeCode) (not .IsEmptyRepo)}}
				<div class="item{{if .PageIsCommits}} active{{end}}">
					<a class="ui" href="{{.RepoLink}}/commits/{{.BranchNameSubURL}}">{{svg "octicon-history"}} <b>{{.CommitsCount}}</b> {{.locale.TrN .CommitsCount "repo.commit" "repo.commits"}}</a>
				</div>
				<div class="item{{if .PageIsBranches}} active{{end}}">
					<a class="ui" href="{{.RepoLink}}/branches">{{svg "octicon-git-branch"}} <b>{{.BranchesCount}}</b> {{.locale.TrN .BranchesCount "repo.branch" "repo.branches"}}</a>
				</div>
				{{if $.Permission.CanRead $.UnitTypeCode}}
					<div class="item">
						<a class="ui" href="{{.RepoLink}}/tags">{{svg "octicon-tag"}} <b>{{.NumTags}}</b> {{.locale.TrN .NumTags "repo.tag" "repo.tags"}}</a>
					</div>
				{{end}}
				<div class="item">
					<span class="ui">{{svg "octicon-database"}} <b>{{FileSize .Repository.Size}}</b></span>
				</div>
			{{end}}
			<!-- DCS Customizations -->
			{{if .Repository.Language}}
				<div class="item">
					<a class="ui" href="{{AppSubUrl}}/explore/repos?q=lang:{{.Repository.Language}}" title="Is a{{if .Repository.LanguageIsGL}} Gateway{{else}}n Other{{end}} Language"><i class="fa fa-language"></i> <span style="font-weight: bold"><span data-language="{{.Repository.Language}}" data-language-direction="{{.Repository.LanguageDirection}}">{{.Repository.LanguageTitle}}</span> ({{.Repository.Language}}){{if .Repository.LanguageIsGL}}*{{end}}</span></a>
				</div>
			{{end}}
			{{if .Repository.MetadataType}}
				{{$metadataTypeTitle := (GetMetadataTypeTitle .Repository.MetadataType)}}
				{{$metadataTypeIconURL := (GetMetadataTypeIconURL .Repository.MetadataType)}}
				<div class="item">
					<a class="ui" href="{{AppSubUrl}}/explore/repos?q=metadata_type:{{.Repository.MetadataType}}" title="Metadata Type: {{$metadataTypeTitle}} v{{.Repository.MetadataVersion}}">{{svg "octicon-briefcase"}} <span style="font-weight: bold">{{.Repository.MetadataType}}{{.Repository.MetadataVersion}}</span> <img src="{{$metadataTypeIconURL}}" style="height:16px;vertical-align:middle"/></a>
				</div>
			{{end}}
			<!-- END DCS Customizations -->
		</div>
	</div>
	{{if and (.Permission.CanRead $.UnitTypeCode) (not .IsEmptyRepo) .LanguageStats}}
	<div class="ui segment sub-menu language-stats-details" style="display: none">
		<div class="ui horizontal center link list">
			{{range .LanguageStats}}
			<div class="item df ac jc">
				<i class="color-icon mr-3" style="background-color: {{.Color}}"></i>
				<span class="bold mr-3">
					{{if eq .Language "other"}}
						{{$.locale.Tr "repo.language_other"}}
					{{else}}
						{{.Language}}
					{{end}}
				</span>
				{{.Percentage}}%
			</div>
			{{end}}
		</div>
	</div>
	<a class="ui segment language-stats">
		{{range .LanguageStats}}
		<div class="bar tooltip" style="width: {{.Percentage}}%; background-color: {{.Color}}" data-placement="top" data-content={{.Language}}>&nbsp;</div>
		{{end}}
	</a>
	{{end}}
</div>
{{end}}
