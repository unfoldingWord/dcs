                {{svg "octicon-briefcase"}} {{ctx.Locale.Tr "repo.metadata.metadata"}}
</a>
{{$refToPreview := .Repository.DefaultBranch}}
{{$refType := "branch"}}
{{if .IsViewTag}}
    {{$refType = "tag"}}
    {{$refToPreview = .TagName}}
{{else if .IsViewBranch}}
	{{$refToPreview = .BranchName}}
{{end}}
