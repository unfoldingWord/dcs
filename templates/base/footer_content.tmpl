<footer>
	<div class="ui container">
		<div class="ui left">
			<span class="license">Except where otherwise noted, content on DCS is licensed under a <bdi><a href="https://door43.org/en/copyright-and-licensing/" target="_blank">CC BY-SA 4.0 License</a></bdi></span>
			{{.i18n.Tr "powered_by" "Gitea"}} {{if (or .ShowFooterVersion .PageIsAdmin)}}{{.i18n.Tr "version"}}: {{AppVer}}{{end}} {{if and .TmplLoadTimes ShowFooterTemplateLoadTime}}{{.i18n.Tr "page"}}: <strong>{{LoadTimes .PageStartTime}}</strong> {{.i18n.Tr "template"}}: <strong>{{call .TmplLoadTimes}}</strong>{{end}}
		</div>
		<div class="ui right links">
			<div class="ui language bottom floating slide up dropdown link item">
				{{svg "octicon-globe"}}
				<div class="text">{{.LangName}}</div>
				<div class="menu language-menu">
					{{range .AllLangs}}
						<a lang="{{.Lang}}" data-url="{{AppSubUrl}}/?lang={{.Lang}}" class="item {{if eq $.Lang .Lang}}active selected{{end}}">{{.Name}}</a>
					{{end}}
				</div>
			</div>
			<a href="{{AssetUrlPrefix}}/js/licenses.txt">{{.i18n.Tr "licenses"}}</a>
			{{if .EnableSwagger}}<a href="{{AppSubUrl}}/api/swagger">API</a>{{end}}
			<a target="_blank" rel="noopener noreferrer" href="https://unfoldingword.org">unfoldingWord</a>
			{{template "custom/extra_links_footer" .}}
			{{if (or .ShowFooterVersion .PageIsAdmin)}}<span class="version">{{GoVer}}</span>{{end}}
		</div>
	</div>
</footer>
