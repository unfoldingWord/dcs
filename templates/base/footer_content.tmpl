<footer>
	<div class="ui container">
		<div class="ui left">
			<span class="license">
				Except where otherwise noted, content on DCS is licensed under a <bdi><a href="https://door43.org/en/copyright-and-licensing/" target="_blank">CC BY-SA 4.0 License</a></bdi>
			</span>
			{{.i18n.Tr "powered_by" "Gitea"}}
			{{if (or .ShowFooterVersion .PageIsAdmin)}}
				{{if .IsAdmin}}
					<a href="{{AppSubUrl}}/admin/config">{{AppVer}}</a>
				{{else}}
					{{AppVer}}
				{{end}}
			{{end}}
			{{if ShowFooterTemplateLoadTime}}
				{{.i18n.Tr "page"}}: <strong>{{LoadTimes .PageStartTime}}</strong>
				{{.i18n.Tr "template"}}
				{{if .TemplateName}} {{.TemplateName}}{{end}}: <strong>{{call .TemplateLoadTimes}}</strong>
			{{end}}
		</div>
		<div class="ui right links">
			<div class="ui language bottom floating slide up dropdown link item">
				{{svg "octicon-globe"}}
				<div class="text">{{.i18n.LangName}}</div>
				<div class="menu language-menu">
					{{range .AllLangs}}
						<a lang="{{.Lang}}" data-url="{{AppSubUrl}}/?lang={{.Lang}}" class="item {{if eq $.i18n.Lang .Lang}}active selected{{end}}">{{.Name}}</a>
					{{end}}
				</div>
			</div>
			<a href="{{AssetUrlPrefix}}/js/licenses.txt">{{.i18n.Tr "licenses"}}</a>
			{{if .EnableSwagger}}<a href="{{AppSubUrl}}/api/swagger">API</a>{{end}}
			<a target="_blank" rel="noopener noreferrer" href="https://unfoldingword.org">unfoldingWord</a>
			{{template "custom/extra_links_footer" .}}
		</div>
	</div>
</footer>
